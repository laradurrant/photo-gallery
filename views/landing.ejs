<% include ./partials/header %>
<% include ./partials/navbar %>


<div class="container">
  <h1>Fine Art Photography</h1>
  <h3>By Joan Faue-Durrant</h3>


  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <% var index = 0; %>
          <% photos.forEach(function(photo){ %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" <% if (index == 0) { %> class="active" <% } %> > </li>
            <% index = index + 1 %>
          <% }); %>
    </ol>
    <div class="carousel-inner">
        <% index = 0; %>
        <% photos.forEach(function(photo){ %>
           <div class="carousel-item <% if (index == 0) { %> active <% } %>">
              <a href="./photos/"><img src="img/landing/t_<%= photo.image %>" class="d-block w-100" alt="<%= photo.title %>"></a>
            </div>
            <% index = index + 1 %>
        <% }); %>
      
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <br>
  <a href="/photos/">
    <button class="btn btn-primary"> Explore Photos</button></a>
</div>
<% include ./partials/scripts %>
<% include ./partials/footer %>