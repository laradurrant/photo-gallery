<% include ./partials/header %>
<% include ./partials/navbar %>

<div class="container">

  <h3><%= photo.title %></h3>

  <img src="../img/<%= photo.image %>" class="img-fluid" alt="<%= photo.title %>">
  <p><%= photo.description %></p>

  <% if(devMode) { %>
  <p><a href="/photos/<%= photo._id %>/edit">
      <button class="btn btn-primary">Edit Photo</button>
    </a>
    <form id="deleteForm" action="/photos/<%= photo._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger">Delete Photo</button>
    </form>
    <br>
    <% } %>

    <!-- AddToAny BEGIN -->
    <!-- Docs for AddToAny: https://www.addtoany.com/buttons/customize/ -->
    <div class="a2a_kit a2a_kit_size_32 a2a_default_style" id="my_centered_buttons">
      <a class="a2a_dd" href="<%= process.env.SITE_URL %>"></a>
      <a class="a2a_button_facebook"></a>
      <a class="a2a_button_twitter"></a>
      <a class="a2a_button_email"></a>
      <a class="a2a_button_telegram"></a>
    </div>
    <script async src="https://static.addtoany.com/menu/page.js"></script>
    <!-- AddToAny END -->

  </p>
  <a href="/photos">
    <button class="btn btn-primary">Back</button>
  </a>
</div>


<% include ./partials/scripts %>
<% include ./partials/footer %>