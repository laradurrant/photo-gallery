<% include ./partials/header %>
<% include ./partials/navbar %>


<h3>New Photo</h3>
<div class="container">
    <p>
    <form action="/photos" method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">Photo Name</label>
          <input type="text" name="photo[title]" class="form-control" id="exampleFormControlInput1" placeholder="My Awesome Photo">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Filename</label>
            <input type="text" name="photo[image]" class="form-control" id="exampleFormControlInput2" placeholder="Filename.JPG">
        </div>      
        <div class="form-group">
          <label for="exampleFormControlSelect1">Tag Select</label>
          <select name="photo[tag]" class="form-control" id="exampleFormControlSelect1">
            <option>Bird</option>
            <option>Insect</option>
            <option>Small Mammals</option>
            <option>Large Mammals</option>
            <option>Landscape</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Photo Description</label>
          <textarea name="photo[description]" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <input class="btn btn-primary btn-lg" type="submit" value="Submit"> 
      </form>
    </p>
</div>

<% include ./partials/scripts %>
<% include ./partials/footer %>